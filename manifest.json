{
  "manifest_version": 2,
  "name": "Discard Tab",
  "description": "Discard tabs to free up resources",
  "version": "1.2",

  "icons": {
    "48": "icon.svg"
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "commands": {
    "discard-tab-command": {
    "suggested_key": {
      "default": "Alt+X"
    },
    "description": "Discard Current Tab"
    }
  },

  "permissions": [
    "tabs", "http://*/*", "https://*/*",
    "contextMenus",
    "activeTab"
  ]
}
